@import 'normalize'
@import 'subpage'
@import 'nib'

body
	background #f4f4f4
	color #000000
	font-family "adelle",serif
/****************
Helper Classes
****************/
.container
	width 940px
	margin 0 auto
.floatLeft
	float left
.floatRight
	float right
.clearBoth
	clear both
.row
	width 100%
	margin-top 20px
	margin-bottom 20px
	display table
	clear both
.textCenter
	text-align center
.textRight
	text-align right
.centerBlock
	display block
	margin 0 auto
/****************
Header
****************/
header 
	.col1
		width 80%
		float left
	.col2
		width 20%
		float left
	.logoImg 
		max-width 620px
		float right
	.hours ul 
		padding 0
		text-align right
		list-style none
		margin-top 10px
		clear both
.nav 
	padding 0
	float right
	li
		display block
		float	left
		list-style	none
		margin-right 30px
		a 
			color #000
			text-decoration none
		a:hover 
			text-decoration underline

/****************
Hero
****************/
.hero
	position relative
	img
		width 100%
		min-width 940px
	h1
		color	white
		font-weight normal
		position absolute
		left 50%
		text-align center
		margin-top 85px
		font-size 40px
/************************
Main Content on Sub Pages
************************/
.mainContent 
	margin-top 50px
/****************
Locations
****************/
.ourLocations 
	.col1
		width 50%
		float left
	.col2
		width 47%
		float right
.location 
	width 450px
	margin-bottom 30px
.locImg 
	width 100%
.locInfo
	height 100px;
	padding 20px
	margin-top -6px
	border 1px solid #cecece
	border-top none
	h2
		color #006bba
		margin 0
		display	inline-block
	.locLinks 
		text-decoration none
	.locLinks:hover
		text-decoration underline
		color #006bba
	p 
		margin 0
		color #333333
	.maps 
		max-width 100%
.locIcons 
	float right
	margin-right 10px
body
	#colorbox
		width 975px !important
	#cboxWrapper
		width 975px !important	
	#cboxOverlay
		background #000

	#cboxClose 
		background-position -75px 0px !important
		width 45px !important
		height 40px !important
		right -20px !important
		top -25px !important
	#cboxClose:hover
		background-position -75px -40px !important
.locationsList 
	padding 0
	float right
	padding-left 20px
	li
		display block
		float	left
		list-style	none
		margin-right 90px
	li.active 
		color #005798
	li:nth-child(4)
		margin-right 0
	a 
		color #000
		text-decoration none
	a:hover 
		text-decoration underline
/****************
Services
****************/
.services 
	background #eaeaea
	padding-top	20px
	padding-bottom 30px
	p 
		width 660px
		margin 0 auto
		margin-bottom 20px
	.boxGroup
		margin-left 50px
		.valueBox
			width 220px
			height 280px
			padding 20px
			float left
			margin-right 30px
			color white
		.valueBox h1
			text-align center
		.boxGood
			background #0f74bf
		.boxBetter
			background #0a5c99
		.boxBest
			background #02375e
/****************
Video Section
****************/
.videoSection 
	padding-top 20px
	padding-bottom 40px
	.col1
		width 375px
		margin-left	20px
		float left
	.col2
		width 515px
		float right
	.col1 h3 
		color #005798
	ul 
		padding-left 20px
		.listItem
			color #555555
/****************
Footer
****************/
.footer 
	background #eaeaea
	padding-top 20px
	.col1
		width 30%
		margin-top 45px
		float left
	.col2
		width 40%
		float left
	.col3
		width 30%
		float right
		margin-top 45px
	.nav 
		float left
		margin-left 20px
	.finePrint 
		text-align center
		color #555555
		font-size 12px
	.fbLink
		margin-top -7px